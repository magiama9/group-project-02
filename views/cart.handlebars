<!--Class shopping-cart places chekout card at the right corner-->
<div class="container shop-cart">
  {{!-- <div class="col s12 m12"> --}}
  {{!-- <div class="card cart"> --}}
  <div class="row">
    <div class="col s12">
      <div class="col s12 m8">
        <h2 class="header">Your Items</h2>
        <hr>
        <br>
        <!--Proceed to checkout card--->


        <div class="card horizontal">
          <!----->
          {{#each cart}}
          <div class="col s12 m12">
            <div class="shopping-cart">
              <div class="shopping-cart-header">


                <div class="card-image">
                  <img src="{{this.dataValues.img}}">
                </div>

                <div class="card-action">
                  <p class="item product-name">Name: {{this.dataValues.name}}</p>
                  <p id="price{{@index}}" class="item price">Price: ${{this.dataValues.price}}</p>
                  <br>
                  <a href="#" id={{this.dataValues.id}} class="right removeFromCart"><i
                      class="right material-icons">clear</i>Remove Item</a>
                </div>

              </div>

            </div>
            {{/each}}
          </div>
        </div>


        <div class="card  horizontal order-total">
          <div class="row">
            <div class="col s12 m12">
              <div class="card">
                <div class="card-content">
                  <span class="card-title center red-text">Order details</span>
                  <hr>
                  <p>Subtotal: <span class="right subtotal">$0</span></p>
                </div>
                <div class="card-action">
                  <a class="waves-effect waves-light btn-small red chekout-btn">
                    Checkout</a>
                </div>
              </div>
            </div>
          </div>
        </div>



      </div>
    </div>
  </div>
